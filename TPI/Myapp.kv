ScreenManager:
    id:screen_manager
    Screen:
        name: "login"
    Screen:
        name: "menu"

<login>:
    id:login
    md_bg_color: [35/255,59/255,54/255,1]
    MDCard:
        size_hint: None, None
        size: 320,400
        pos_hint: {"center_x":.5,"center_y":.5}
        md_bg_color: [26/255,123/255,204/255,1]
        padding: 20
        spacing: 30
        orientation: "vertical"
        MDLabel:
            id:label1
            text: 'Login'
            font_style: 'Button'
            font_size : 20
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15
        MDTextFieldRound:
            id:user
            hint_text:"username"
            icon_right: "account"
            size_hint_x: None
            width: 220
            font_size: 20
            pos_hint: {"center_x": .5}
        MDTextFieldRound:
            id:pw
            hint_text:"password"
            icon_right: "key"
            size_hint_x: None
            width: 220
            font_size: 20
            pos_hint: {"center_x": .5}
        MDRoundFlatButton:
            text: "Entrar"
            pos_hint:{"center_x":.5}
            on_press: root.consultar()
            on_release: root.manager.current="menu" if root.consultar() else print("error")

        MDLabel:
            id:label
            text: 'Estado'
            font_style: 'Button'
            font_size : 20
            pos_hint: {"center_x": .5}
            halign: "center"
<menu>:
    id:menu
    ScrollView:
        MDList:
            id:contenedor
    MDRoundFlatButton:
        text: "mostrar"
        pos_hint:{"center_x":.5}
        on_press: root.on_start()